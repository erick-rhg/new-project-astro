---
import BaseLayout from "@layouts/BaseLayout.astro";
import HeroBanner from "@components/HeroBanner.astro";
import PageBuilder from "@components/PageBuilder.astro";
import dataJson from "@data/clientes-json.json";
---

<BaseLayout title="Clientes - Keytron S.A.">
  <HeroBanner
    title="Clientes"
    subtitle="Garantizar la satisfacción a través de la mejora continua"
  />

  <PageBuilder dataJson={dataJson} />
</BaseLayout>

<style is:global>
  @media (min-width: 990px) {
    .article-default {
      width: 75vw;
      margin-inline: auto;
    }
  }
</style>
