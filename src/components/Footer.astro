---
import PageBuilder from "./PageBuilder.astro";
---

<footer class="grid-layout">
  <section class="full-bleed">
    <div class="inner-content footer-content">
      <nav class="nav-container-footer" aria-label="Pie de página">
        <ul class="nav-list-footer">
          <li><a href="aviso-legal">Aviso Legal</a></li>
          <li><a href="politica-privacidad">Política de Privacidad</a></li>
          <li><a href="quienes-somos/certificaciones">Certificaciones</a></li>
          <li><a href="contacto">Contacta con nosotros</a></li>
        </ul>
        <p>© 1988- 2025 , Keytron.com · Todos los derechos reservados.</p>
      </nav>
      <div class="footer-social">
        <a href="https://linkedin.com" aria-label="Síguenos en LinkedIn" title="LinkedIn">LinkedIn</a>
        <a href="https://twitter.com" aria-label="Síguenos en Twitter" title="Twitter">Twitter</a>
      </div>
    </div>
  </section>
</footer>

<style>
  .footer-social a {
    display: inline-block;
    width: auto;
    height: auto;
    background-color: transparent;
    padding: 0.5rem 1rem;
    text-decoration: underline;
    color: white;
    transition: var(--transition-fast);
  }

  .footer-content a:hover {
    text-decoration: none;
    opacity: 0.8;
  }

  footer {
    background-color:#386b9e;
    padding-block: 2rem 2rem;
    text-align: center;
    font-size: var(--space-xs);
    color: white;
  }

  a{
    color:white;
  }

  .footer-content {
    display: grid;
    gap: var(--space-l);
  }

  .nav-container-footer {
    display: grid;
    gap: var(--space-xs);
  }

  .nav-list-footer {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-l);
    list-style: none;
  }

  .footer-social {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }

</style>
