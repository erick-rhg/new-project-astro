---
const { title, subtitle, description, img } = Astro.props;
const base = import.meta.env.BASE_URL || '/';

let imgSrc = img;
if (typeof img === 'string' && img.length) {
  if (/^https?:\/\//i.test(img)) {
    imgSrc = img;
  } else {
    imgSrc = img.startsWith('/') ? img.slice(1) : img;
    imgSrc = `${base}${imgSrc}`;
  }
}
---

<div class="card-default">
  {img && <img src={imgSrc} alt="" />}
  {title && <h2>{title}</h2>}
  {subtitle && <h3>{subtitle}</h3>}
  {description && <p set:html={description}></p>}
</div>

<style>
  .card-default {
    display: grid;
    justify-items: center;
    text-align: center;
  }

  :global(.card-default span) {
    color:var(--color-span);
  }

  img {
    max-width: 500px;
  }
  
  :global(.aviso-legal-layout p) {
    white-space: pre-wrap; /* para que respete \n en JSON */
  }
   
  @media (min-width: 990px) {

    
  }
</style>
