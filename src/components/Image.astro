---
const { img, description, subtitle, custom_img } = Astro.props;
const base = import.meta.env.BASE_URL || "/";

let imgSrc = img;
if (typeof img === "string" && img.length) {
  if (/^https?:\/\//i.test(img)) {
    imgSrc = img;
  } else {
    imgSrc = img.startsWith("/") ? img.slice(1) : img;
    imgSrc = `${base}${imgSrc}`;
  }
}
---

<div class:list={[custom_img]}>
  {img && <img src={imgSrc} alt="" />}
  {subtitle && <h4>{subtitle}</h4>}
  {description && <p set:html={description} />}
</div>

<style>
  img {
    max-width: 115px;
    max-height: 75px;
  }

  .mobile-hide img {
    max-width: 100%;
    max-height: initial;
    object-fit: contain;
  }

  .mobile-hide {
    display: none;
  }

  .contacto-item {
    display: grid;
    gap: var(--space-m);
  }

  :global(.contacto-item p) {
    text-align: center;
  }

  :global(.contacto-item a) {
    text-decoration: none;
  }

  :global(.certificaciones-bold a) {
    font-weight: bold;
    color: var(--color-primary);
    font-size: var(--fs-1);
  }

  :global(a:hover) {
    text-decoration: underline;
  }

  @media (min-width: 990px) {
    img {
      max-width: 150px;
      max-height: 75px;
    }

    .mobile-hide {
      display: block;
    }
  }
</style>
