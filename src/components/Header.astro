---
const base = import.meta.env.BASE_URL || "/";
---

<header class="grid-layout">
  <nav class="full-bleed" aria-label="NavegaciÃ³n principal">
    <div class="inner-content nav-container">
      <a href="" class="logo">
        <img src={`${base}img/logokeytron.png`} alt="Logo" />
      </a>

      <button
        class="menu-toggle"
        aria-label="Toggle menu"
        aria-expanded="false"
        aria-controls="main-menu"
      >
        <span class="hamburger">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </span>
      </button>

      <div class="nav-wrapper" id="main-menu">
        <ul class="nav-list">
          <li><a href="">INICIO</a></li>
          <li class="has-submenu">
            <a
              href="quienes-somos"
              aria-haspopup="true"
              aria-expanded="false"
              id="link_disable">QUIENES SOMOS</a
            >
            <ul class="submenu">
              <li><a href="quienes-somos/historia">Historia</a></li>
              <li>
                <a href="quienes-somos/nuestro-compromiso">Nuestro compromiso</a
                >
              </li>
              <li>
                <a href="quienes-somos/certificaciones">Certificaciones</a>
              </li>
            </ul>
          </li>
          <li><a href="alianzas">ALIANZAS</a></li>
          <li><a href="soluciones-y-servicios">SOLUCIONES Y SERVICIOS</a></li>
          <li><a href="clientes">CLIENTES</a></li>
          <li><a href="contacto">CONTACTO</a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 55px;
    max-height: 55px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    backdrop-filter: blur(7px);
    padding-block: 10px;
    padding-inline: 40px;
    border-radius: 0 0 15px 15px;
    border-bottom: 2px solid #e3e3e33d;
  }

  .logo {
    display: block;
    z-index: 1001;
  }

  .logo img {
    width: 70px;
  }

  .menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }

  .hamburger {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 20px;
  }

  .hamburger-line {
    width: 100%;
    height: 2px;
    background-color: var(--color-primary);
    transition: var(--transition-medium);
  }

  .menu-toggle.is-active .hamburger-line:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }

  .menu-toggle.is-active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.is-active .hamburger-line:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }

  .nav-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--color-background);
    padding-top: 80px;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    overflow-y: auto;
  }

  .nav-wrapper.is-active {
    transform: translateX(0);
  }

  .nav-list {
    display: flex;
    flex-direction: column;
    list-style: none;
    padding: var(--space-m);
    margin: 0;
    font-family: var(--font-family-heading);
  }

  .nav-list a {
    display: block;
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    padding: var(--space-s);
    border-radius: var(--border-radius-small);
    transition: var(--transition-fast);
    font-size: var(--fs-2);
  }

  .nav-list a:hover {
    background-color: #d5e8f8;
  }

  .submenu {
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
    background-color: #d5e8f8;
    border-radius: var(--border-radius-small);
  }

  .submenu a {
    padding-left: var(--space-l);
    font-size: var(--fs-1);
  }

  .submenu a:hover {
    background-color: #aed5f4;
  }

  .has-submenu.submenu-active .submenu {
    display: block;
  }

  @media (min-width: 990px) {
    .nav-container {
      min-height: 80px;
      margin-top: 5px;
      border-radius: 40px;
      border: 2px solid #e3e3e323;
    }

    .logo img {
      width: 100px;
    }

    .menu-toggle {
      display: none;
    }

    .nav-wrapper {
      position: static;
      height: auto;
      padding-top: 0;
      transform: none;
      background-color: transparent;
      overflow-y: visible;
      width: auto;
    }

    .nav-list {
      flex-direction: row;
      padding: 0;
      align-items: center;
    }

    .nav-list a {
      font-size: var(--fs--1);
      padding: var(--space-xs);
    }

    .has-submenu {
      position: relative;
    }

    .submenu {
      position: absolute;
      top: 100%;
      left: 0;
      min-width: 160px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-radius: 0 0 10px 10px;
      padding: var(--space-xs);
    }

    .has-submenu.submenu-active .submenu {
      display: block;
      animation: fadeIn 0.2s ease-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>

<script>
  const menuToggle = document.querySelector(".menu-toggle");
  const navWrapper = document.querySelector(".nav-wrapper");
  const hasSubmenuItems = document.querySelectorAll(".has-submenu");
  const focusSubmenu = document.querySelector(".has-submenu");

  function openMenu() {
    if (!menuToggle || !navWrapper) return;
    menuToggle.setAttribute("aria-expanded", "true");
    navWrapper.classList.add("is-active");
    if (menuToggle instanceof HTMLElement)
      menuToggle.classList.add("is-active");
    document.body.style.overflow = "hidden";
    const firstLink = navWrapper.querySelector("a");
    if (firstLink instanceof HTMLElement) firstLink.focus();
  }

  function closeMenu() {
    if (!menuToggle || !navWrapper) return;
    menuToggle.setAttribute("aria-expanded", "false");
    navWrapper.classList.remove("is-active");
    if (menuToggle instanceof HTMLElement)
      menuToggle.classList.remove("is-active");
    document.body.style.overflow = "";
    if (menuToggle instanceof HTMLElement) menuToggle.focus();
  }

  if (menuToggle && navWrapper) {
    menuToggle.addEventListener("click", () => {
      const isExpanded = menuToggle.getAttribute("aria-expanded") === "true";
      if (isExpanded) closeMenu();
      else openMenu();
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && navWrapper.classList.contains("is-active")) {
        closeMenu();
      }
    });
  }

  hasSubmenuItems.forEach((item) => {
    const link = item.querySelector("a");
    const submenu = item.querySelector(".submenu");

    if (link && submenu) {
      link.setAttribute("aria-expanded", "false");

      link.addEventListener("click", (e) => {
        e.preventDefault();
        if (window.innerWidth <= 768) {
          const active = item.classList.toggle("submenu-active");
          link.setAttribute("aria-expanded", active ? "true" : "false");
        }
      });

      item.addEventListener("mouseenter", () => {
        if (window.innerWidth > 768) {
          item.classList.add("submenu-active");
          link.setAttribute("aria-expanded", "true");
        }
      });

      item.addEventListener("mouseleave", () => {
        if (window.innerWidth > 768) {
          item.classList.remove("submenu-active");
          link.setAttribute("aria-expanded", "false");
        }
      });
    }

    item.addEventListener("focusin", () => {
      if (window.innerWidth > 768 && link) {
        item.classList.add("submenu-active");
        link.setAttribute("aria-expanded", "true");
      }
    });

    item.addEventListener("focusout", (e) => {
      const focusEvent = e as FocusEvent;
      if (
        window.innerWidth > 768 &&
        focusEvent.relatedTarget &&
        !item.contains(focusEvent.relatedTarget as Node)
      ) {
        item.classList.remove("submenu-active");
        if (link) link.setAttribute("aria-expanded", "false");
      }
    });
  });
</script>
