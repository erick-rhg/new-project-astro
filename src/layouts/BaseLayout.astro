---
import "@styles/reset.css";
import "@styles/variables.css";
import "@styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

const { title = "", description = "", image = "", url = "" } = Astro.props;
const base = import.meta.env.BASE_URL || "/";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} — Keytron` : "Keytron"}</title>
    <meta
      name="description"
      content={description ||
        "Keytron - Consultoría tecnológica y soluciones digitales."}
    />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title || "Keytron"} />
    <meta
      property="og:description"
      content={description ||
        "Keytron - Consultoría tecnológica y soluciones digitales."}
    />
    <meta property="og:image" content={image || "/social-default.png"} />
    <link rel="canonical" href={url || "/"} />
    <base href="/new-project-astro/" />
    <link rel="icon" href={`${base}favicon.ico`} />
  </head>
  <body>
    <a class="skip-link" href={`${base}#main-content`}>Saltar al contenido</a>

    <slot name="header">
      <Header />
    </slot>

    <main class="grid-layout">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  main {
    padding-bottom: 7rem;
  }

  .skip-link {
    position: absolute;
    left: -9999px;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
  }

  .skip-link:focus {
    position: fixed;
    left: 1rem;
    top: 1rem;
    width: auto;
    height: auto;
    background: var(--color-light, #fff);
    color: var(--color-text-heading, #111);
    padding: 0.5rem 1rem;
    z-index: 1100;
    border-radius: var(--border-radius-small);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  }
</style>
